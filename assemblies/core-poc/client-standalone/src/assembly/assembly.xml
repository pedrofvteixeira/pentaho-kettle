<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>pdi-core-ce</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>data-integration</baseDirectory>

  <fileSets>
    <!-- the staging dir -->
    <fileSet>
      <directory>${assembly.dir}</directory>
      <outputDirectory>.</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/resources</directory>
      <outputDirectory>.</outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>

    <!-- pdi static resources -->
    <dependencySet>
      <includes>
        <include>org.pentaho.di:pdi-core-poc-static:zip</include>
      </includes>
      <unpack>true</unpack>
      <outputDirectory>.</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>

    <!-- licenses -->
    <dependencySet>
      <includes>
        <include>pentaho:oss-licenses:zip</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>PentahoDataIntegration_OSS_Licenses.html</include>
        </includes>
      </unpackOptions>
      <outputDirectory>.</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>

    <!-- application launcher -->
    <dependencySet>
      <includes>
        <include>pentaho:pentaho-application-launcher</include>
      </includes>
      <outputDirectory>launcher</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useProjectArtifact>false</useProjectArtifact>
      <outputFileNameMapping>launcher.jar</outputFileNameMapping>
    </dependencySet>
  </dependencySets>
</assembly>